{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/next"
      },
      {
        "src": "server/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      },
      {
        "src": "/api/(.*)",
        "dest": "/server/$1"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "devCommand": "npm run dev",
    "buildCommand": "npm run build",
    "outputDirectory": "dist"
  }
  